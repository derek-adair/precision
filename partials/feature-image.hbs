{{#if feature_image}}
        <div class="site-cover u-overlay">
            <img class="cover-image u-object-fit" src="{{img_url feature_image}}" alt="{{title}}">
            <div class="cover-content">
                <h1 style="color:white">{{title}}</h1>
                {{#if @site.description}}
                    <div class="cover-description">{{feature_image_caption}}</div>
                {{/if}}
            </div>
        </div>
{{else}}
    <h1>{{title}}</h1>
{{/if}}
